<%- include('includes/header.ejs') %>
<%- include('includes/alerts.ejs') %>

<body style="overflow-y: hidden;">
  <div class="container-flex">
    <div class="row">
      <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">
    
        <div class="signup">
          <form action="/signup" method="post">
            <label for="chk" id="lblSign" aria-hidden="true">
              Sign up
            </label>
            <input type="text" autocomplete="new-password" name="username" placeholder="Nombre de usuario...">
            <input type="email" name="email" placeholder="Correo electronico...">
            <input type="password" autocomplete="new-password" name="password" placeholder="Contraseña...">            
            <select name="role" id="">
              <option value="" selected="true" disabled>Tipo de cuenta</option>
              <option value="1">Usuario</option>
              <option value="2">Organización</option>
            </select>
            <div class="row">
              <div class="col-2"></div>
              <div class="col-8" style="left: 5px;">
                <select name="area" class="form-control combo-login">
                <option value="" selected="true" disabled>Área de trabajo</option>
                  <% jobs.forEach(job => { %>
                    <option value="<%=job.name%>"><%=job.name%></option>                  
                  <% }) %>
              </select>
              </div>
              <div class="col-2"></div>
            </div>
                   
            <button>Registrarte</button>
          </form>
        </div>
    
        <div class="login">
          <form action="/signin" method="post">
            <label for="chk" id="lblLogin" aria-hidden="true">Login</label>
            <input type="text" name="username" placeholder="Nombre de usuario...">
            <input type="password" name="password" placeholder="Contraseña...">
            <button>Entrar</button>
          </form>
        </div>
      </div> 
    </div>
  </div>

  <div class="example-box">
    <div class="background-shapes">
    </div> 
  </div>

</body>

<%- include('includes/scripts.ejs') %>
<script src="/js/functions.js"></script>